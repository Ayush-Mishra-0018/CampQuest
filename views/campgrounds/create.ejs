<% layout("./layouts/boiler.ejs") %>
<form action="/campgrounds" method="post" class="add-campground-form needs-validation" novalidate>
    <div class="form-group">
        <input type="text" class="form-control" name="title" placeholder="Enter The Title" autocomplete="off" required>
        <div class="invalid-feedback">Title Is Required.</div>
    </div>

    <div class="form-group">
        <input type="number" class="form-control" min="0" name="price" placeholder="Enter The Price" autocomplete="off" required>
        <div class="invalid-feedback">Price Is Required.</div>
    </div>

    <div class="form-group">
        <label for="des">Enter The Description</label>
        <textarea class="form-control" name="description" id="des" rows="5" required></textarea>
        <div class="invalid-feedback">Description Is Required.</div>
    </div>

    <div class="form-group">
        <input type="text" class="form-control" name="location" autocomplete="off" placeholder="Enter The Location" required>
        <div class="invalid-feedback">Location Is Required.</div>
    </div>

    <div class="form-group">
        <label for="img">Image URL</label>
        <input type="text" class="form-control" name="image" autocomplete="off" id="img" required>
        <div class="invalid-feedback">Image URL Is Required.</div>
    </div>

    <button class="btn-submit btn btn-primary">Submit</button>
    <button type="button" class="btn-back btn btn-secondary" onclick="window.location.href='/campgrounds'">Back To Home Page</button>
    
</form>



